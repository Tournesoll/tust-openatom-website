{
    "name": "jekyll-admin",
    "version": "1.0.0",
    "description": "本地 Jekyll 文章管理后台 - 桌面应用版",
    "main": "main.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "electron": "electron .",
        "electron:dev": "NODE_ENV=development electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "jekyll",
        "cms",
        "admin",
        "github",
        "electron",
        "desktop"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "front-matter": "^4.0.2",
        "marked": "^11.0.0",
        "simple-git": "^3.20.0"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.0.1"
    },
    "build": {
        "appId": "com.jekyll.admin",
        "productName": "Jekyll 文章管理",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "server.js",
            "routes/**/*",
            "public/**/*",
            "config.json",
            "package.json",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "assets/icon.icns",
            "category": "public.app-category.utilities"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
